@inherits DisplayEmployeeBase


<div class="card m-3" style="min-width:18rem; max-width:30.5%;">
    <div class="card-header">
        <h3>
        <input type="checkbox" @onchange="CheckBoxChecked" />
        @Employee.FirstName @Employee.LastName</h3>

    </div>
    <img class="card-img-top" src="@Employee.PhotoPath" />
    @if (ShowFooter)
    {
    <div class="card-footer text-center">
        <a href="@($"employedetails/{Employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
        <a href="#" class="btn btn-primary m-1">Edit</a>
        <a href="#" class="btn btn-danger m-1">Delete</a>
    </div>
    }

</div>